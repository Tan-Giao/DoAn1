<html xmlns="http://www.w3.org/1999/xhtml">
    <head></head>
    <body>
    <section class="banner">
        <img id="Banner" src="~/img/trangchu/Banner1.jpg" style="width: 100%;">
    </section>

    <script>
                const images = [
            "img/trangchu/Banner1.jpg",
            "img/trangchu/Banner2.jpg",
            "img/trangchu/Banner3.jpg"
        ];

        let currentIndex = 0;

        function changeImage() {
            currentIndex++;
            if (currentIndex >= images.length) {
                currentIndex = 0;
            }
            const imgElement = document.getElementById("Banner");
            imgElement.src = images[currentIndex];
        }

        setInterval(changeImage, 2000);
    </script>


    <div class="Vechungtoi" style="display: flex; font-size:50px; font-weight:400; justify-content: center; align-items: center; block-size:100px;">Sản Phẩm Nổi Bật</div>
    
